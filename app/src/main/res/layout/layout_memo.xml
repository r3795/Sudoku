<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textView_memo1"
            android:layout_width="7sp"
            android:layout_height="15sp"
            android:gravity="center_vertical"
            android:text="1"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView_memo2"
            android:layout_width="7sp"
            android:layout_height="15sp"
            android:gravity="center_vertical"
            android:text="2"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView_memo3"
            android:layout_width="7sp"
            android:layout_height="15sp"
            android:gravity="center_vertical"
            android:text="3"
            android:textAlignment="center"
            android:visibility="invisible" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_memo4"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:gravity="center_vertical"
            android:text="4"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView_memo5"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:gravity="center_vertical"
            android:text="5"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView_memo6"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:gravity="center_vertical"
            android:text="6"
            android:textAlignment="center"
            android:visibility="invisible" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_memo7"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:gravity="center_vertical"
            android:text="7"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView_memo8"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:gravity="center_vertical"
            android:text="8"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView_memo9"
            android:layout_width="wrap_content"
            android:layout_height="15sp"
            android:gravity="center_vertical"
            android:text="9"
            android:textAlignment="center"
            android:visibility="invisible" />
    </TableRow>
</TableLayout>